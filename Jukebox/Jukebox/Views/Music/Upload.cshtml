@model User
@using Jukebox.Models;

@using (Html.BeginForm("Save", "Music", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="profile-container container-fluid">
        <div class="row">
            <div class="progress progress-striped active" id="progressouter">
                <div class="progress-bar" role="progressbar"  id="progress">
                    <span class="sr-only">45% Complete</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-lg-8">
                <form class="form-horizontal" role="form">
                    <legend>Upload your music.</legend>
                    <div class="form-group">
                        <label class="control-label col col-lg-3">Choose your songs.</label>
                        <div class="col-lg-9 input-div">
                            <input type="file" multiple name="file" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <input type="submit" value="Upload" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        var progresspump = setInterval(function () {
            /* query the completion percentage from the server */
            $.get("/app/update-progress", function (data) {
                /* update the progress bar width */
                $("#progress").css('width', data + '%');
                /* and display the numeric value */
                $("#progress").html(data + '%');

                /* test to see if the job has completed */
                if (data > 99.999) {
                    clearInterval(progresspump);
                    $("#progressouter").removeClass("active");
                    $("#progress").html("Done");
                }
            })
        }, 1000);
    });
</script>