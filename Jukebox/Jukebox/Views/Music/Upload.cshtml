@model User
@using Jukebox.Models;

@using (Html.BeginForm("Save", "Music", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="profile-container container-fluid">
        <div class="row">
            <div class="col col-lg-8">
                <form class="form-horizontal" role="form">
                    <legend>Upload your music.</legend>
                    <div class="form-group">
                        <label class="control-label col col-lg-3">Choose your songs.</label>
                        <div class="col-lg-9 input-div">
                            <input type="file" multiple name="file" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <input type="submit" value="Upload" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>
}