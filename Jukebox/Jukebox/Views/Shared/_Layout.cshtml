<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jukebox - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
     <script language="Javascript" type="text/javascript" src="~/Scripts/modal-dropdown.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Jukebox", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>


        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
        @if (Request.IsAuthenticated){
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Playlist <b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        <li role="presentation">
                            <!-- Button trigger modal, creating a modal for the user to easily create a group playlist -->

                        <a data-toggle="modal" href="#CreateAroomModal">Create A Room</a>
                        </li>
                        <li role="presentation">
                            <!--ActionLink Method for joining a room -->
                             <a data-toggle="modal" href="#JoinAroomModal" id="join-start">Join a room</a>
                        </li>

                    </ul>
                </li>
            </ul>
        }          
        @Html.Partial("_LoginPartial")
        </div><!-- /.navbar-collapse -->


    </nav>

  

    <div class="container">
        @RenderBody()
        <hr />
        <footer id="footer-div">
            <div class="center">
                @Html.ActionLink("About", "About", "Home", null, new { @class="footer-link"})
                @Html.ActionLink("Contact", "Contact", "Home",null, new { @class="footer-link"})
            </div>
            <div class="center"></div>
            <p class="pull-left">&copy; @DateTime.Now.Year Jukebox. All Rights Reserved.</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

  <!-- Create A Room Modal -->
<div class="modal fade" id="CreateAroomModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create A Room</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row modal-row" id="modal-privacy">
                        <div class="col col-lg-1">
                            <span class="round-number">1</span>
                        </div>
                        <div class="col col-lg-11">                      
                                <h4 class="modal-header-description">Choose your privacy: </h4>
                                <select class="form-control" id="privacy-selector">
                                    <option>Select Your Privacy:</option>
                                    <option>Public</option>
                                    <option>Private</option>
                                </select>
                        </div>
                    </div>
                    <div class="row modal-row modal-hidden" id="modal-genre">
                        <div class="col col-lg-1">
                            <span class="round-number">2</span>
                        </div>
                        <div class="col col-lg-11">
                            <h4 class="modal-header-description">Select a Genre: </h4>
                            <select class="form-control" id="genre-selector">
                                <option>Hip-Hop</option>
                                <option>Dubstep</option>
                                <option>House</option>
                            </select>
                        </div>
                    </div>
                    <div class="row modal-row modal-hidden" id="modal-private-information">
                        <div class="col col-lg-1">
                            <span class="round-number">2</span>
                        </div>
                        <div class="col col-lg-11">
                            <div>
                                <h4 class="modal-header-description">Choose a group name and password: </h4>
                                <form role="form">
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter a group name">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter a password">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row modal-row modal-hidden" id="modal-public-information">
                        <div class="col col-lg-1">
                            <span class="round-number">3</span>
                        </div>
                        <div class="col col-lg-11">
                            <div>
                                <h4 class="modal-header-description">Choose a group name: </h4>
                                <form role="form">
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter a group name">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" id="modal-footer">
                <input type="submit" value="Create" class="btn btn-primary pull-right" />
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->





 <!-- Join A Room Modal -->
<div class="modal fade" id="JoinAroomModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Join A Room</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row modal-row" id="modal-privacy">
                        <div class="col col-lg-1">
                            <span class="round-number">1</span>
                        </div>
                        <div class="col col-lg-11">                      
                                <h4 class="modal-header-description">Choose your privacy: </h4>
                                <select class="form-control" id="privacy-selector2">
                                    <option>Select Your Privacy:</option>
                                    <option>Public</option>
                                    <option>Private</option>
                                </select>
                        </div>
                    </div>

                    <div class="row modal-row modal-hidden" id="modal-private-creation">
                        <div class="col col-lg-1">
                            <span class="round-number">2</span>
                        </div>
                        <div class="col col-lg-11">
                            <div>
                                <h4 class="modal-header-description">Enter a group name and password: </h4>
                                <div class="input-group">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Group name" id="room-name" >
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Password" id="room-pw">
                                </div>    
                                </div>
                            </div>
                        </div>
                    </div>

                      <div class="row modal-row modal-hidden" id="genre-select">
                        <div class="col col-lg-1">
                            <span class="round-number">2</span>
                        </div>
                        <div class="col col-lg-11">
                             <h4 class="modal-header-description">Select a Genre: </h4>
                             <select class="form-control" id="genre-choice" name ="genre">
                                  <option >Select a Genre</option>
                                  <option >Alternative</option>
                                  <option >Classical</option>
                                  <option >Country</option>
                                  <option >EDM</option>
                                  <option >Hip-Hop</option>
                                  <option >Indie</option>
                                  <option >Pop</option>
                                  <option >R&B</option>
                                  <option >Rock</option>
                                  <option >Techno</option>
                             </select>
                       </div>  
                    </div>

                  
                    

                </div>
            </div>
            <div class="modal-footer" id="modal-footer2">
                <input type="submit" value="Search" class="btn btn-primary pull-right" />
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




