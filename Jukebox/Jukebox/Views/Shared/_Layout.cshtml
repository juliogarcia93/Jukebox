<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jukebox - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
     <script language="Javascript" type="text/javascript" src="~/Scripts/CustomScript.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Jukebox", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>


        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
@if (Request.IsAuthenticated){
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Playlist <b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        <li role="presentation">
                            <!-- Button trigger modal, creating a modal for the user to easily create a group playlist -->

                        <a data-toggle="modal" href="#myModal">Create A Room</a>
                        </li>
                        <li role="presentation">
                            <!--ActionLink Method for joining a room -->
                             <a data-toggle="modal" href="#JoinAroomModal">Join a room</a>
                        </li>

                    </ul>
                </li>
            </ul>
}          
        @Html.Partial("_LoginPartial")
        </div><!-- /.navbar-collapse -->


    </nav>

  

    <div class="container">
        @RenderBody()
        <hr />
        <footer id="footer-div">
            <div class="center">
                @Html.ActionLink("About", "About", "Home", null, new { @class="footer-link"})
                @Html.ActionLink("Contact", "Contact", "Home",null, new { @class="footer-link"})
            </div>
            <div class="center"></div>
            <p class="pull-left">&copy; @DateTime.Now.Year Jukebox. All Rights Reserved.</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

<!-- Modal object that gets called when clicking create a room -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="false">&times;</button>
                            <h4 class="modal-title">Create a room</h4>
                               </div>
                                    <div class="modal-body">
                                        <div class="input-group">
                                            <h4>Enter your group name:</h4>
                            <input type="text" class="form-control" placeholder="Group name">
                                        </div>
                            <hr />
                    <!--Used to select the genre of the room-->
                                            <h4>Select a genre:</h4>
                                                    <div class="col-lg-9 input-div">
                                                <select name ="genre">
                                                    <option>Hip-Hop</option>
                                                    <option>Dubstep</option>
                                                    <option>R&B</option>
                                                    <option>Country</option>
                                                    <option>House</option>
                                                </select>
                                                    </div>  
                            <hr />
                    <!--Used to select public or private rooms-->
                                            <h4>Please select Public or Private room:</h4>
                                                    <div class="col-lg-9 input-div">
                                                <select name ="Room Type">
                                                   <option>Public</option>
                                                   <option>Private</option>
                                                </select> 
                                                    </div> 
    
                    <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <!-- Have to make the submit button connect to the database where the new room will be created -->
            <button type="button" class="btn btn-primary">Submit</button>
                    </div>
            </div><!-- closed modal-body -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<!-- Modal object that gets called when clicking create a room -->
        <div class="modal fade" id="JoinAroomModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="false">&times;</button>
                            <h4 class="modal-title">Join a Room</h4>
                               </div>
                                    <div class="modal-body">
                                        <div class="input-group" id="room-search">
                                            <h4>Search for Room:</h4>
                            <input type="text" class="form-control" placeholder="Group name">
                                        </div>
                            
                    <!--Used to select the genre of the room-->
                                        <div id="genre-select">
                                            <h4>Search by Genre:</h4>
                                                    <div class="col-lg-9 input-div">
                                                <select name ="genre">
                                                    <option>Hip-Hop</option>
                                                    <option>Dubstep</option>
                                                    <option>R&B</option>
                                                    <option>Country</option>
                                                    <option>House</option>
                                                </select>
                                                    </div>  
                                        </div>
                           
                    <!--Used to select public or private rooms-->
                                           <div id="room-type">
                                            <h4>Please select Public or Private room:</h4>
                                                    <div class="col-lg-9 input-div">
                                                <select name ="Room Type">
                                                   <option>Public</option>
                                                   <option>Private</option>
                                                </select> 
                                                    </div> 
                                           </div>
                                           
    
                    <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <!-- Have to make the submit button connect to the database where the new room will be created -->
            <button type="button" class="btn btn-primary">Submit</button>
                    </div>
            </div><!-- closed modal-body -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</html>
